{
    "name": "bigbit/di-bootstrap",
    "description": "App DI Container bootstrapping",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrzej Heczko",
            "email": "andrzej.heczko@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "BigBIT\\DIBootstrap\\": "src/"
        }
    },
    "require": {
        "psr/container": "^1.0",

        "php": "^7.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "phpstan/phpstan": "^0.11.15"
    },
    "suggest": {
        "bigbit/smart-di": "^2.0.2",
        "bigbit/oddin": "^2.0.0"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "stan": "phpstan analyse --level 7 -c phpstan.neon src"
    }
}
